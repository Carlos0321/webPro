<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lec.ch19.dao.MemberDao">
	<resultMap type="Member" id="MemberResult">
		<result property="mid" column="mid"/>
		<result property="mpw" column="mpw"/>
		<result property="mname" column="mname"/>
		<result property="mmail" column="mmail"/>
		<result property="mpost" column="mpost"/>
		<result property="maddress" column="maddress"/>
	</resultMap>
	
	<select id="idConfirm" parameterType="String" resultType="int"> <!-- 입력받는 parameter가 무엇인지에 따라 parameterType을 다르게함 -->
		SELECT count(*) FROM MEMBER WHERE MID = #{mid}
	</select>
	
	<insert id="joinMember" parameterType="Member">
		INSERT INTO MEMBER VALUES(#{mid},#{mpw},#{mname},#{mmail},#{mpost},#{maddress})
	</insert>
	
	<select id="getMember" parameterType="String" resultType="Member">  <!-- return 타입이 resultType과 같다 -->
		SELECT * FROM MEMBER WHERE MID=#{mid}
	</select>
	
	<update id="modifyMember" parameterType="Member">
		UPDATE MEMBER SET MPW = #{mid},
                               MNAME = #{mname},
                               MPOST = #{mpost},
                               MADDRESS = #{maddress} 
                            WHERE MID =#{mid}
	</update>
</mapper>    